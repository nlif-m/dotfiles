#!/bin/sh



folder_with_videos=/home/nlif/Videos/watch_later 
folder_with_videos_for_sed="s/\/home\/nlif\/Videos\/watch_later\///" 
selected_video=$( find "$folder_with_videos" | tail -n +2 | sed $folder_with_videos_for_sed | sort|  dmenu -l 20) || exit
selected_video="$folder_with_videos/$selected_video"

mpv "$selected_video" && answer=$(printf "save\ndelete" | dmenu -p "What to do with video ?" -l 2)

if [ "$answer" = "delete" ];
then 
    rm "$selected_video"
fi


